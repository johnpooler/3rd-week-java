package firstProject;

public class myFirstClass {
	public static void main(String[] args) {
		
		int a = 64;
		int b = 8;
		
		
		if (isDivisible(a,b)) {
			System.out.println("a and b are divisible");
		}	else {
			System.out.println("is not divisible");
		}
		
		
		
		System.out.println("is " + a + " divisible by " + b + ":" + isDivisible(a, b));
		
		
		
		
		isDivisible2(500, 250);//method being called

		
	}
	
	
	
	
	
	
	
	
	//boolean parameter ex using return
	public static boolean isDivisible(int num, int divider) {
		return (num % divider == 0);
		}
	
		
	
	
	//void ex using sysout
	public static void isDivisible2(int num, int divider) {
		System.out.println("they are divisible "+ (num % divider == 0)); 


	}
}